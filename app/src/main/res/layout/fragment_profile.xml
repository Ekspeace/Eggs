<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".Fragment.ProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp">

   <EditText
       android:id="@+id/profile_name"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:hint="Name"
       android:textColorHint="@color/grey"
       android:textColor="@color/brown_700"
       android:drawablePadding="5dp"
       android:fontFamily="@font/lucida_sans"
       android:textSize="12sp"
       android:layout_marginHorizontal="20dp"
       android:drawableStart="@drawable/user_color"/>
    <EditText
        android:id="@+id/profile_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Phone"
        android:textColorHint="@color/grey"
        android:textColor="@color/brown_700"
        android:drawablePadding="5dp"
        android:fontFamily="@font/lucida_sans"
        android:textSize="12sp"
        android:inputType="phone"
        android:layout_marginHorizontal="20dp"
        android:drawableStart="@drawable/phone"/>
    <EditText
        android:id="@+id/profile_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:textColorHint="@color/grey"
        android:textColor="@color/brown_700"
        android:drawablePadding="5dp"
        android:fontFamily="@font/lucida_sans"
        android:textSize="12sp"
        android:inputType="textPassword"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="20dp"
        android:drawableStart="@drawable/lock"/>

    <Button
        android:id="@+id/profile_button_update"
        android:layout_width="173dp"
        android:layout_height="35dp"
        android:background="@drawable/button_view"
        android:fontFamily="@font/cooper"
        android:text="Update"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:theme="@style/buttonColor"
        android:layout_marginTop="30dp" />

    </LinearLayout>
</FrameLayout>