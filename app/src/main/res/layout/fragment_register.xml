<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/brown_500"
    tools:context=".Fragment.RegisterFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/register_name_et"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/user_color"
            android:drawablePadding="5dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/lucida_sans"
            android:hint="Name"
            android:inputType="text"
            android:textColor="@color/brown_700"
            android:textColorHint="@color/grey"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/register_phone_et"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/phone"
            android:drawablePadding="5dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/lucida_sans"
            android:hint="Phone"
            android:inputType="phone"
            android:textColor="@color/brown_700"
            android:textColorHint="@color/grey"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/register_name_et" />

        <EditText
            android:id="@+id/register_email_et"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/email"
            android:drawablePadding="5dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/lucida_sans"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:textColor="@color/brown_700"
            android:textColorHint="@color/grey"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/register_phone_et" />

        <EditText
            android:id="@+id/register_password_et"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:textColorHint="@color/grey"
            android:textColor="@color/brown_700"
            android:drawableStart="@drawable/lock"
            android:drawablePadding="5dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/lucida_sans"
            android:textSize="12sp"
            android:inputType="textPassword"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/register_email_et" />

        <EditText
            android:id="@+id/register_confirm_password_et"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:hint="Confirm Password"
            android:textColorHint="@color/grey"
            android:textColor="@color/brown_700"
            android:drawableStart="@drawable/lock"
            android:drawablePadding="5dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/lucida_sans"
            android:textSize="12sp"
            android:inputType="textPassword"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/register_password_et" />

        <Button
            android:id="@+id/register_btn"
            android:layout_width="173dp"
            android:layout_height="35dp"
            android:background="@drawable/button_view"
            android:fontFamily="@font/cooper"
            android:text="register"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:theme="@style/buttonColor"
            android:layout_marginTop="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/register_confirm_password_et" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>