<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Eggs" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/brown_500</item>
        <item name="colorPrimaryVariant">@color/brown_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/brown_700</item>
        <item name="colorSecondaryVariant">@color/brown_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="buttonColor" parent="Theme.MaterialComponents.DayNight.NoActionBar">
         <item name="colorPrimary">@color/brown_700</item>
    </style>
    <style name="progressBarColor" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/brown_500</item>
    </style>
    <style name="sansText" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/lucida_sans</item>
        <item name="android:textSize">13sp</item>
    </style>
    <style name="sansTextBold" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/lucida_sans_bold</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="Theme.Fab_Bottom_app_bar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">#0F9D58</item>
        <item name="colorPrimaryVariant">#0F9D58</item>
        <item name="colorOnPrimary">#000</item>
    </style>
</resources>